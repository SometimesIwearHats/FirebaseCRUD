@{
    Layout = "_Layout";
}

@model Car

<h2>Are you sure you want to delete this car?</h2>
<p>@Model.Make @Model.Model (@Model.Year)</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="CarId" value="@Model.CarId" />
    <button type="submit">Yes, Delete</button>
    <a href="/Cars/Index">No, Cancel</a>
</form>
